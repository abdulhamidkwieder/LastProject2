{% extends 'base.html.twig' %}
{% block header_navigation_links %}{% endblock %}
{% block body %}
<div class="container-fluid py-5 bg-dark bg-image"> 
    <div class="container rounded bg-white register-container py-4 col-xs-12 col-sm-10 col-md-6 col-lg-4">
    <h2 class="page-header">Login</h2>
    <hr>
    {% if error %}
        <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        <hr>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" class="form-control" value="" />
        <label for="password" class="mt-3">Password</label>
        <input type="password" id="password" name="_password" class="form-control" />
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <p class="pt-2 my-0">
            Not registered! <a href="register" class="text-danger">Register Now</a>
        </p>
        <button type="submit" class="btn btn-danger mt-3">login</button>
    </form>
    </div>
</div>
{% endblock %}
