{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
    ul {
        list-style: none;
        padding: 0;
        color: red;
    }
</style>
{% endblock %}
{% block body %}
<div class="container-fluid bg-dark py-5 bg-image"> 
    <div class="container rounded bg-white register-container py-4 col-xs-12 col-sm-10 col-md-6 col-lg-4">
        <h2 class="page-header">Register</h2>
        <hr>
        {% for message in app.flashes('notice') %}
            <div class="p-2 text-success font-weight-bold">
                {{ message }}
                <a href="login" class="text-danger">Login now!</a>
            </div>
            <hr>
        {% endfor %}
        {{ form_start(form) }}
            {{ form_row(form.companyName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.address) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.url) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-danger">Register</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
