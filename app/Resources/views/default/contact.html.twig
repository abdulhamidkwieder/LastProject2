{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .bg-image {
            background: url('../img/contact.png');
            background-size: cover;
        }

        .contact-container {
            box-shadow: 0 0 15px #999;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-5 bg-light bg-image"> 
    <div class="container contact-container bg-white col-xs-12 col-sm-10 col-md-6 col-lg-4" style="border-radius: 5px;">
    <h2 class="page-header pt-3">Contact us</h2>
    <hr>
        {% for message in app.flashes('notice') %}
            <div class="p-2 text-success font-weight-bold">
                {{ message }}
            </div>
            <hr>
        {% endfor %}

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
        
    </div>
</div>
{% endblock %}